{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "subcommand": "run",
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo run - mandelbrot"
    },
    {
      "type": "cargo",
      "subcommand": "test",
      "problemMatcher": ["$rustc"],
      "label": "Rust: cargo test - mandelbrot"
    },
    {
      "type": "cargo",
      "subcommand": "clean",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "label": "Rust: cargo clean - mandelbrot"
    },
    {
      "type": "cargo",
      "subcommand": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Rust: cargo build - mandelbrot"
    },
    {
      "type": "shell",
      "command": "cargo",
      "args": ["build", "--release"],
      "problemMatcher": ["$rustc"],
      "label": "Cargo release",
      "group": "build"
    }
  ]
}
